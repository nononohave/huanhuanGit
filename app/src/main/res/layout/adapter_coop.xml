<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@color/addAddressBack"
    android:descendantFocusability="blocksDescendants"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/ll_adapter_coop_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_adapter_coop_cover"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/public_placehold"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:id="@+id/ll_adapter_personDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_adapter_coop_cover"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_adapter_coop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="桃花妖异次元觉醒次元桃花妖异次元觉醒次元桃花妖异次元觉醒次元"
                    android:textSize="@dimen/phone_text_size" />

                <TextView
                    android:id="@+id/tv_adapter_coop_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="By 飞行的猪"
                    android:textSize="@dimen/text_size_small"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/city_address"
                        />
                    <TextView
                        android:id="@+id/tv_adapter_coop__address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杭州市"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/grey_text_desc"
                        android:textSize="@dimen/text_size_small"
                        />
                    <TextView
                        android:id="@+id/tv_adapter_coop_joinNums"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="15人参加"
                        android:textColor="@color/grey_text_desc"
                        android:textSize="@dimen/text_size_small"
                        />
                    <TextView
                        android:id="@+id/tv_adapter_coop_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2017-12-30"
                        android:textColor="@color/greyText"
                        android:textSize="@dimen/small_text"
                        android:gravity="right"
                        android:layout_alignBottom="@+id/ll_adapter_personDesc"
                        android:layout_alignParentRight="true"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/adapter_address_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/greyDivideLine"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>