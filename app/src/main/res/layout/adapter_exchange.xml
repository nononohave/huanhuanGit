<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@color/addAddressBack"
    android:descendantFocusability="blocksDescendants"
    >
    <RelativeLayout
        android:id="@+id/rl_adapter_exchange_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/ll_adapter_exchange_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_adapter_exchange_cover"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/public_placehold"
                android:scaleType="fitXY"
                />
            <LinearLayout
                android:id="@+id/ll_adapter_personDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_adapter_exchange_cover"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_adapter_exchange_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/phone_text_size" />
                <LinearLayout
                    android:id="@+id/ll_author_myPublish_adapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.cos.huanhuan.views.CircleImageView
                        android:id="@+id/iv_myPublish_headImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/public_placehold" />

                    <TextView
                        android:id="@+id/tv_adapter_exchange_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff82AEC7"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/text_size_small"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_adapter_exchange_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/titleBarTextColor"
                    android:textSize="@dimen/forgetTextSize"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_adapter_exchange_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/greyText"
                android:textSize="@dimen/small_text"
                android:layout_alignBottom="@+id/ll_adapter_personDesc"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:id="@+id/adapter_address_line"
            android:layout_below="@id/ll_adapter_exchange_detail"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/greyDivideLine"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/rl_adapter_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adapter_address_line"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            >
            <TextView
                android:id="@+id/tv_refuse_exchange"
                android:layout_toLeftOf="@+id/tv_agree_exchange"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/btn_agress"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="拒绝"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/grey_text_desc"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_agree_exchange"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/btn_agress"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="同意"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/grey_text_desc"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_sendGoods_exchange"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/btn_agress"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="发货"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/grey_text_desc"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_exchange_delete"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:text="删除"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawableLeft="@mipmap/address_delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:textColor="@color/grey_text_desc"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>