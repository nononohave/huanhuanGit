<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
            <com.cos.huanhuan.views.CircleImageView
                android:id="@+id/cim_adapter_comment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/public_placehold"
                app:border_color="@color/white"
                app:border_width="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/cim_adapter_comment"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:id="@+id/tv_comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="绯色@美美哒"
                    android:textColor="@color/comment_text"
                    android:textSize="@dimen/action_text_size"
                    />
                <TextView
                    android:id="@+id/tv_comment_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="太漂离了，只看到胸和大腿！！！！太漂离了，只看到胸和大腿！！！！"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/phone_text"
                    android:textSize="@dimen/action_text_size"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_comment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3小时前"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/forgetPassText"
                        android:textSize="@dimen/small_text"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        >
                        <ImageView
                            android:id="@+id/iv_adapter_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/good_grey"
                            />
                        <TextView
                            android:id="@+id/tv_adapter_goodNums"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赞"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/forgetPassText"
                            android:textSize="@dimen/small_text"
                            android:layout_marginLeft="5dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/comment"
                            android:layout_marginLeft="15dp"
                            />
                        <TextView
                            android:id="@+id/tv_adapter_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="回复"
                            android:textColor="@color/forgetPassText"
                            android:textSize="@dimen/small_text"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividLineColor"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>