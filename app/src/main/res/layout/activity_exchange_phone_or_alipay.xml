<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cos.huanhuan.activitys.ExchangePhoneOrAlipayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp"
        >
        <TextView
            android:id="@+id/tv_phone_alipay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前绑定支付宝"
            android:textColor="@color/grey_text_desc"
            android:textSize="@dimen/action_text_size"
            />
        <TextView
            android:id="@+id/tv_phone_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18368040174"
            android:textColor="@color/titleBarTextColor"
            android:layout_marginTop="25dp"
            android:textSize="@dimen/big_phone"
            />
        <Button
            android:id="@+id/btn_exchange_phone_alipay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_corner"
            android:layout_marginTop="40dp"
            android:text="@string/exchange_alipay"
            android:textSize="@dimen/popTextSize"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_exchange_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝将用于提现操作"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="25dp"
            android:textColor="@color/greyText"
            />
    </LinearLayout>
</LinearLayout>
