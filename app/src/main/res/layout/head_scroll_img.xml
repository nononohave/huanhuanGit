<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/roll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:rollviewpager_play_delay="3000"
        app:rollviewpager_hint_gravity = "right"
        app:rollviewpager_hint_paddingLeft = "7dp"
        app:rollviewpager_hint_paddingRight = "7dp"
        app:rollviewpager_hint_paddingTop = "7dp"
        app:rollviewpager_hint_paddingBottom = "7dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="-8dp"
        >
        <ImageView
            android:id="@+id/img_hot_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/index_hot"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/img_hot_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="热门精选"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/text_size_large"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_viewAllExchange"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/viewAllExchange"
            android:textColor="@color/titleBarTextColor"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/img_next_all"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/img_next_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/index_all_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>