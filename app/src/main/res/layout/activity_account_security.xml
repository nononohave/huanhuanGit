<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cos.huanhuan.activitys.AccountSecurityActivity">

    <RelativeLayout
        android:id="@+id/rl_account_security_phone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tv_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phoneNumber"
            android:textSize="@dimen/small_text"
            />
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_phone_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_account_security_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/popTextSize"
                android:textColor="@color/grey_black"
                />

            <TextView
                android:id="@+id/tv_account_security_phone_bind"
                android:layout_toLeftOf="@+id/iv_account_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/popTextSize"
                android:textColor="@color/grey_black"
                />
            <ImageView
                android:id="@+id/iv_account_next"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/back_grey"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividLineColor"
        />
    <RelativeLayout
        android:id="@+id/rl_account_security_alipay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/tv_alipay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="@dimen/small_text"
            />
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_alipay_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_account_security_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/popTextSize"
                android:textColor="@color/grey_black"
                />

            <TextView
                android:id="@+id/tv_account_security_alipay_bind"
                android:layout_toLeftOf="@+id/iv_account_alipay__next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/popTextSize"
                android:textColor="@color/titleBarTextColor"
                />
            <ImageView
                android:id="@+id/iv_account_alipay__next"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/index_all_next"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividLineColor"
        />
</LinearLayout>
