<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cos.huanhuan.activitys.EditPersonDataActivity"
    android:background="@color/addAddressBack"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="15dp"
        >
    <EditText
        android:id="@+id/et_edit_personDesc"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="top"
        android:background="@drawable/input_area"
        android:hint="请输入个性签名"
        android:maxLength="70"
        />
    <TextView
        android:id="@+id/tv_editTextNums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="0/70"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        />
    </RelativeLayout>
</LinearLayout>
