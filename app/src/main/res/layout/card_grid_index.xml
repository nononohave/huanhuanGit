<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:paddingBottom="10dp"
    >
        <ImageView
            android:id="@+id/card_img_adapter"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/qq_img"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/card_title_adapter"
            android:layout_below="@id/card_img_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_marginTop="5dp"
            android:text="桃花妖异次元觉醒"
            android:layout_alignParentLeft="true"
            />
        <LinearLayout
            android:layout_below="@id/card_title_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By"
                android:textSize="@dimen/text_size_small"
                />
            <TextView
                android:id="@+id/card_user_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="飛行的豬"
                android:textColor="#ff82AEC7"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>
</RelativeLayout>