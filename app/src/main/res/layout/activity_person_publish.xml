<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cos.huanhuan.activitys.PersonPublishActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/img_person_publish_back"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:src="@mipmap/nav_back"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_person_publish_tabLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:tabBackground="@color/titleBarBack"
            app:tabIndicatorColor="@color/titleBarTextColor"
            app:tabSelectedTextColor="@color/titleBarTextColor"
            app:tabTextColor="@color/black"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            android:layout_marginTop="8dp"
            android:layout_weight="8"
            />
        <TextView
            android:id="@+id/right_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/send_address"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dividLineColor"
        />
    <FrameLayout
        android:id="@+id/ll_person_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_personPublish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/addAddressBack"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid_recycle_personPublish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</LinearLayout>
