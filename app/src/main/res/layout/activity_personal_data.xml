<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cos.huanhuan.activitys.PersonalDataActivity"
    android:background="@color/addAddressBack"
    >

    <RelativeLayout
        android:id="@+id/rl_person_data_headImage"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_person_personDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_black"
            android:text="个人头像"
            android:textSize="@dimen/phone_text_size"
            android:layout_centerVertical="true"
            />
        <com.cos.huanhuan.views.CircleImageView
            android:id="@+id/civ_person_data_headImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/comment_grey"
            android:layout_toLeftOf="@+id/iv_person_next"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_person_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_grey"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_person_data_nickName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="昵称"
            android:textColor="@color/phone_text"
            android:textSize="@dimen/phone_text_size" />
        <TextView
            android:id="@+id/tv_person_data_nickName"
            android:layout_toLeftOf="@+id/tv_person_data_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/forgetPassText"
            android:textSize="@dimen/popTextSize"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/tv_person_data_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_grey" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/greyDivideLine"/>
    <RelativeLayout
        android:id="@+id/rl_person_data_sex"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="性别"
            android:textColor="@color/phone_text"
            android:textSize="@dimen/phone_text_size" />
        <TextView
            android:id="@+id/tv_person_data_sex"
            android:layout_toLeftOf="@+id/iv_person_data_sex_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/forgetPassText"
            android:textSize="@dimen/popTextSize"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_person_data_sex_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_grey" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/greyDivideLine"/>
    <RelativeLayout
        android:id="@+id/rl_person_data_desc"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:paddingRight="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="个性签名"
            android:textColor="@color/phone_text"
            android:textSize="@dimen/phone_text_size" />
        <TextView
            android:id="@+id/tv_person_data__desc"
            android:layout_toLeftOf="@+id/iv_person_data__desc_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/forgetPassText"
            android:textSize="@dimen/popTextSize"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/iv_person_data__desc_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_grey" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/greyDivideLine"/>
</LinearLayout>
